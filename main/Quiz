QUESTIONS = [
    ("In what year was Minecraft fully released", "2011"),
    ("Minecraft has been used in educational environments to teach computer science, computer-aided design, and what other subject", "Chemistry"),
    ("What is the mobile version of the game called", "Minecraft Earth")
]

for question, correct_answer in QUESTIONS:
    answer = input(f"{question}? ")
    if answer == correct_answer:
        print("Correct!")
    else:
        print(f"The answer is {correct_answer!r}, not {answer!r}")

